<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="Create New Task" contentWidth="400px">
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Task Title" required="true"/>
                    <Input id="newTaskTitle" value="{newTask>/title}" placeholder="e.g. User Acceptance Testing"/>
                    
                    <Label text="Start Date" required="true"/>
                    <DatePicker id="newTaskStart" value="{newTask>/startDate}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd"/>
                    
                    <Label text="End Date" required="true"/>
                    <DatePicker id="newTaskEnd" value="{newTask>/endDate}" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Create" type="Emphasized" press="onSaveNewTask"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelCreateTask"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>